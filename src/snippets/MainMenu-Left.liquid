<!-- MAINMENU NAV LEFT SIDE -->

<ul class="NavBlock__List">
    <!-- MOBILE NAV TOGGLER -->
    <li class="Mobile-Item MobileNav--Toggler">
        <button id="MobileToggler" class="">
            <span><i class="fa fa-bars"></i></span>
        </button>
    </li>

    {%- for parentLink in linklists.main-menu.links -%}
        {%- if parentLink.links != blank -%}
            <li class="NavBlock__List__Item--Dropdown">
                <a href="#" class="js-no-transition">{{ parentLink.title }}</a>
                <div class="Dropdown__Content">
                    {% assign currentLink = parentLink.title | downcase | strip %}
                    <ul class="Dropdown__Content--MultiColumn">
                        {%- for dropdownLink in parentLink.links-%}
                            <li class="Dropdown__Content__Item">
                                {%- assign hover_image = false -%}
                                {%- for block in section.blocks -%}
                                    {%- if block.type == 'collection_hover_image' and block.settings.collection == dropdownLink.object.handle -%}
                                        {%- assign hover_image = block.settings.hover_image -%}
                                        {%- break -%}
                                    {%- endif -%}
                                {%- endfor -%}
                                <a class="Dropdown__Content__Link {% if hover_image %}has-hover{% endif %}" href="{{ dropdownLink.url }}">
                                    <img class="Dropdown__Content__DefaultImage" src="{{ dropdownLink.object.image  | img_url: '500x' }}">
                                    {%- if hover_image -%}
                                        <img class="Dropdown__Content__HoverImage" src="{{ hover_image | img_url: '500x' }}" alt="{{ hover_image.alt }}">
                                    {%- endif -%}
                                    <span>{{ dropdownLink.title }}</span>
                                </a>
                            </li>
                        {%- endfor -%}
                    </ul>
                </div>
            </li>
        {% else %}
            <li class="NavBlock__List__Item"><a href="{{ parentLink.url }}">{{ parentLink.title }}</a></li>
        {% endif %}
    {%- endfor -%}
</ul>