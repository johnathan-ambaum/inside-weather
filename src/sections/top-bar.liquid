<style>
  .TopBar {
    background: {{ section.settings.background_color }};
    color: {{ section.settings.font_color }};
  }
</style>

<div class="TopBar">
  <span class="hide--small">{{ section.settings.text }}</span>
  <span class="hide--large">{{ section.settings.mobile_text }}</span>
</div>

{% schema %}
  {
    "name": "Top Bar",
    "settings": [
      {
        "id": "background_color",
        "type": "color",
        "label": "Background Color",
        "default": "#f5eeea"
      },
      {
        "id": "font_color",
        "type": "color",
        "label": "Font Color",
        "default": "#202020"
      },
      {
        "id": "text",
        "type": "richtext",
        "label": "Text",
        "default": "<p>FREE Shipping on Every Order | 365 Day Home Trial</p>"
      },
      {
        "id": "mobile_text",
        "type": "richtext",
        "label": "Text (mobile)",
        "default": "<p>FREE Shipping on Every Order | 365 Day Home Trial"
      }
    ]
  }
{% endschema %}