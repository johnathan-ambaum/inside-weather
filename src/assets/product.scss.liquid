$gutter: 40px;

.ProductDetailGrid {
  margin: 0 auto;
  max-width: 2400px;
  min-height: 100vh;
  padding: 0 $gutter;
  position: relative;

  &, p, a, h1, h2, h3 {
    font-family: Avalon, sans-serif;
  }

  img {
    max-width: 100%;
  }

  @media only screen and (min-width: 776px) {
    @supports (grid-gap: 3rem) {
      display: grid;
      grid-gap: 3rem;
      grid-template-columns: 1fr 425px;
    }
  }
}

.ProductDetailGrid__Main {
  @media only screen and (max-width: 1023px) {
    margin-left: -$gutter;
    margin-right: -$gutter;
    padding-top: $gutter / 2;
  }

  @media only screen and (min-width: 776px) {
    float: left;
    margin-right: 3rem;
    margin-top: $gutter;
    width: calc(100% - 425px - 3rem);

    @supports (grid-gap: 3rem) {
      float: none;
      width: auto;
    }
  }
}

.ProductDetailGrid__Sidebar {
  hr {
    border-color: #212121;
    margin: 2rem 0;
  }

  @media only screen and (max-width: 1023px) {
    margin-left: -$gutter;
    margin-right: -$gutter;

    hr {
      display: none;
    }

    h3 {
      font-weight: bold;
      margin-bottom: 0;
    }
  }

  @media only screen and (min-width: 776px) {
    float: left;
    padding-top: $gutter;
    width: 425px;

    @supports (grid-gap: 3rem) {
      float: none;
    }

    &.is-fixed,
    &.hug-bottom {
      max-height: calc(100vh - 110px);
      overflow: auto;
      padding-right: $gutter;
      right: 0;

      .MainNav--Small & {
        max-height: calc(100vh - 70px);
      }
    }

    &.is-fixed {
      position: fixed;
      top: 110px;

      .MainNav--Small & {
        top: 70px;
      }
    }

    &.hug-bottom {
      bottom: 0;
      position: absolute;
    }
  }
}

.Product__PriceRow {
  align-items: flex-end;
  display: flex;
  flex-wrap: wrap;

  .product__price {
    font-size: 32px;
    font-weight: 600;
    line-height: 1;
    margin-right: 1rem;
  }
}

@media only screen and (max-width: 1023px) {
  .Product__PriceRow {
    display: none;
  }

  .product-single__meta,
  .Product__Explore {
    padding: 0 20px;
  }
}

.Product__ShippingNote {
  color: #d69d8a;
  font-style: italic;
  font-weight: 600;
  white-space: nowrap;
}

.Product__JumpLinks {
  margin: 2rem 0;

  @media only screen and (min-width: 1024px) {
    display: none;
  }
}

.Product__JumpLink {
  display: block;
  font-size: 14px;
  font-weight: 600;
  margin: .5rem 0;
  text-decoration: none;
  text-transform: uppercase;

  &:hover {
    text-decoration: underline;
  }
}

.Product__AddToCartRow {
  display: flex;
  margin-top: 2rem;

  .product__quantity {
    margin-bottom: 0;
    margin-right: 1rem;
  }

  .js-qty__wrapper,
  .js-qty__num {
    height: 100%;
  }

  button {
    font-family: Avalon;
    letter-spacing: .05em;
    text-transform: uppercase;

    &, &:hover {
      padding-bottom: 15px;
      padding-top: 15px;
    }
  }
}

.Product__Explore {
  @media only screen and (max-width: 1023px) {
    background: #f4f4f4;
    padding-bottom: 1rem;
    padding-top: 1rem;
  }
}

.Product__Lead {
  font-size: 18px;
  font-weight: 600;
  line-height: 1.1;
  margin-bottom: 5px;

  @media only screen and (min-width: 776px) {
    margin-bottom: 10px;
  }
}

.visually-hidden {
  border: 0;
  clip: rect(0 0 0 0);
  height: 1px;
  margin: -1px;
  overflow: hidden;
  padding: 0;
  position: absolute !important;
  width: 1px;
}