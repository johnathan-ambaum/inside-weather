$gutter: 40px;
$sidebar-width: 425px;

.template-collection .page-container {
  padding-bottom: 56px;
}

.ProductDetailGrid {
  margin: 0 auto;
  max-width: 2000px + $sidebar-width;
  min-height: 100vh;
  padding: 0;
  position: relative;

  &::after {
    clear: both;
    content: '';
    display: table;
  }

  @media only screen and (min-width: 1024px) {
    padding-left: $gutter;
  }

  &, p, a, h1, h2, h3 {
    font-family: Avalon, Poppins, "HelveticaNeue", "Helvetica Neue", sans-serif;
  }

  .affirm-as-low-as {
    margin: 0;

    &, a {
      color: #8a8a8a;
      font-family: Roboto, "HelveticaNeue", "Helvetica Neue", sans-serif;
      font-size: 12px;
      font-weight: 400;

      @media only screen and (max-width: 1023px) {
        font-size: 11px;
      }
    }
  }

  img {
    max-width: 100%;
  }
}

.ProductDetailGrid__Main {
  @media only screen and (min-width: 1024px) {
    float: left;
    margin-top: $gutter;
    max-width: 1208px;
    padding-right: 60px;
    position: relative;
    width: calc(100vw - #{$sidebar-width});
  }
}

.ProductDetailGrid__Sidebar {
  .product-single__meta + hr {
    border-color: #212121;
    margin: 30px 0 32px;
  }

  @media only screen and (max-width: 1023px) {
    position: relative;

    .product-single__meta + hr {
      display: none;
    }

    .Product__Explore h3 {
      font-weight: bold;
      margin-bottom: 0;
    }
  }

  @media only screen and (min-width: 1024px) {
    float: right;
    padding-top: $gutter / 2;
    width: $sidebar-width;

    &.is-fixed,
    &.hug-bottom {
      max-height: calc(100vh - 110px);
      overflow: auto;
      right: 0;

      .MainNav--Small & {
        max-height: calc(100vh - 70px);
      }
    }

    &.is-fixed {
      position: fixed;
      top: 142px;

      .MainNav--Small & {
        top: 102px;
      }
    }

    &.hug-bottom {
      bottom: 0;
      position: absolute;
    }
  }
}

.Product__FavoriteRow {
  margin-top: 20px;
  text-align: right;

  @media only screen and (max-width: 1023px) {
    display: none;
  }
}

.Product__Favorite {
  cursor: pointer;
  font-size: 20px;
}

.product-single__meta {
  padding-right: $gutter;
}

@media only screen and (max-width: 1023px) {
  .Product__PriceRow {
    display: none;
  }

  .product-single__meta,
  .Product__Explore {
    padding: 0 20px;
  }
}

.Product__ShippingNote {
  color: #d69d8a;
  font-style: italic;
  font-weight: 600;
  white-space: nowrap;
  letter-spacing: .035em;
}

.Product__JumpLinks {
  margin: 2rem 0;

  @media only screen and (max-width: 1023px) {
    display: none;
  }
}

.Product__JumpLink {
  display: block;
  font-size: 14px;
  font-weight: 600;
  margin: .5rem 0;
  text-decoration: none;
  text-transform: uppercase;

  &:hover {
    text-decoration: underline;
  }
}

.Product__AddToCartRow {
  display: flex;
  margin: 0 0 15px;

  .product__quantity {
    margin-bottom: 0;
    margin-right: 1rem;
  }

  .select-wrap {
    select {
      background-position: right 20px center;
      border: 1px solid #959595;
      height: 100%;
      margin-right: 10px;
      padding: 0 35px 0 20px;
    }
  }

  button {
    font-family: Avalon, Poppins, "HelveticaNeue", "Helvetica Neue", sans-serif;
    letter-spacing: .05em;
    text-transform: uppercase;

    &, &:hover {
      padding-bottom: 15px;
      padding-top: 15px;
    }
  }

  .add-to-cart {
    color: #fff;
    background: #202020;

    &:hover {
      color: #fff;
    }
  }
}

.Product__Explore {
  h3 {
    font-weight: 700;
    letter-spacing: 0;
  }

  @media only screen and (max-width: 1023px) {
    background: #f4f4f4;
    margin-top: 30px;
    padding-bottom: 1rem;
    padding-top: 1rem;
  }
}

.Product__Lead {
  font-size: 18px;
  font-weight: 600;
  line-height: 1.1;
  margin-bottom: 5px;

  @media only screen and (min-width: 1024px) {
    margin-bottom: 10px;
  }
}

.visually-hidden {
  border: 0;
  clip: rect(0 0 0 0);
  height: 1px;
  margin: -1px;
  overflow: hidden;
  padding: 0;
  position: absolute !important;
  width: 1px;
}