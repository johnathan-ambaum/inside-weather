$gutter: 30px;
$sidebar-width: 432px;

.template-collection .page-container {
  padding-bottom: 56px;
}

.ProductDetailGrid {
  display: flex;
  flex-direction: column;
  margin: 0;
  min-height: 100vh;
  padding: 0;
  position: relative;

  &::after {
    clear: both;
    content: '';
    display: table;
  }

  @media only screen and (min-width: 1025px) {
    flex-direction: row;
    max-width: 2000px + $sidebar-width;
    padding-left: $gutter;
  }

  &, p, a, h1, h2, h3 {
    font-family: Avalon, Poppins, "HelveticaNeue", "Helvetica Neue", sans-serif;
  }

  img {
    max-width: 100%;
  }
}

.ProductDetailGrid__Main {
  order: 1;

  @media only screen and (min-width: 1025px) {
    flex: 1 1 100%;
    margin-top: $gutter;
    order: 0;
    padding-right: 60px;
    position: relative;
  }
}

.ProductDetailGrid__Sidebar {
  .product-single__meta + hr {
    border-color: #212121;
    margin: 30px 0 32px;
  }

  @media only screen and (max-width: 1023px) {
    position: relative;

    .product-single__meta ~ hr {
      display: none;
    }

    .Product__Explore h3 {
      font-weight: bold;
      margin-bottom: 0;
    }
  }

  @media only screen and (min-width: 1025px) {
    margin-right: $gutter;
    padding-top: $gutter / 2;
    flex: 0 0 $sidebar-width;
  }

  @media only screen and (min-width: 1025px) and (max-width: 1200px) {
    flex-shrink: 1;
  }
}

.Product__FavoriteRow {
  margin-top: 20px;
  text-align: right;

  @media only screen and (max-width: 1023px) {
    display: none;
  }
}

.Product__Favorite {
  cursor: pointer;
  font-size: 20px;
}

.product-single__meta {
  padding-right: $gutter;
}

@media only screen and (max-width: 1023px) {
  .Product__PriceRow {
    display: none;
  }

  .product-single__meta,
  .Product__Explore {
    padding: 0 20px;
  }
}

.Product__ShippingNote {
  color: #d69d8a;
  font-style: italic;
  font-weight: 600;
  white-space: nowrap;
  letter-spacing: .035em;
}

.Product__JumpLinks {
  margin: 2rem 0;

  @media only screen and (max-width: 1023px) {
    display: none;
  }
}

.Product__JumpLink {
  display: block;
  font-size: 14px;
  font-weight: 600;
  margin: .5rem 0;
  text-decoration: none;
  text-transform: uppercase;

  &:hover {
    text-decoration: underline;
  }
}

.Product__Explore {
  h3 {
    font-weight: 700;
    letter-spacing: 0;
  }

  @media only screen and (max-width: 1023px) {
    background: #f4f4f4;
    margin-top: 30px;
    padding-bottom: 1rem;
    padding-top: 1rem;
  }
}

.Product__Lead {
  font-size: 18px;
  font-weight: 600;
  line-height: 1.1;
  margin-bottom: 5px;

  @media only screen and (min-width: 1025px) {
    margin-bottom: 10px;
  }
}

.visually-hidden {
  border: 0;
  clip: rect(0 0 0 0);
  height: 1px;
  margin: -1px;
  overflow: hidden;
  padding: 0;
  position: absolute !important;
  width: 1px;
}